<header class="text-center">
  <h3>Calendar</h3>
</header>

<div class="container container-fluid">
  <div class="row justify-content-center">
    <div class="col-6 event-container">
      <div class="card calendar-card" style="width: 100%">
        <div class="card-body">
          <div class="card-header event-header card-title">
            <h5>Add New Calendar Event</h5>
          </div>

          <div class="event-form-container">
            <form>
              <div class="mb-3 justify-content-center">
                <div class="col-md-3">
                  <label for="eventName" class="form-label">Event Name</label>
                  <input
                    type="text"
                    id="event-name-input"
                    placeholder="Event Name"
                  />
                </div>
                <div class="col-md-3">
                  <label for="eventLocation" class="form-label">Event Location</label>
                  <input
                    type="text"
                    placeholder="Event Location"
                    id="event-description-input"
                  />
                </div>
                <div class="col-md-3">
                  <label for="startDate" class="form-label">Start Date and Time</label>
                  <input type="datetime-local" id="event-start-input" />
                </div>
                <div class="col-md-3">
                  <label
                    for="endDate"
                    id="event-end-input"
                    class="form-label"
                  >End Date and Time</label>
                  <input type="datetime-local" />
                </div>
                <div class="col-md-3">
                  <label for="repeatSelect" class="form-label">Repeat this
                    Event:</label>
                  <select class="form-select">
                    <option selected>Repeat Event:</option>
                    <option value="1">Never</option>
                    <option value="2">Every Day</option>
                    <option value="3">Every Week</option>
                    <option value="4">Every Month</option>
                  </select>
                </div>
                <div class="col-md-3">
                  {{! <button type="submit" id="" class="event-btn btn-primary">Add
                    Event</button> }}
                </div>
              </div>
            </form>
          </div>
          <button
            type="submit"
            id="submit-event-button"
            class="event-btn btn-primary"
          >Add Event</button>
        </div>
      </div>
    </div>

    <!-- To-Do Column -->
    <div class="col-3">
      <div class="card to-do-card" style="width: 100%">
        <div class="card-header to-do-card-header">
          To Do:
          <a href="checklist" id="plus">
            <i class="fa-solid fa-plus"></i>
          </a>
        </div>
        <ul class="list-group list-group-flush">
          {{#each to_do as |item|}}
            <li class="list-group-item to-do-item">{{item.name}}</li>
          {{/each}}
        </ul>
      </div>

      <div class="card to-do-card" style="width: 100%">
        <div class="card-header missed-card-header">
          Missed To Dos:
        </div>
        <ul class="list-group list-group-flush">
          {{#each to_do as |item|}}
            <li class="list-group-item missed-item">{{item.name}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/addEvent.js"></script>