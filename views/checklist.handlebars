<header class="text-center">
  <h3>Checklist</h3>
</header>

<!-- Today Overview column -->
<div class="container container-fluid">
  <div class="row">
    <div class="col-9 main-container">
      <div class="card checklist-card" style="width: 100%">
        <div class="card-body">
          <div class="card-header dash-header card-title">
            <h5>To Do List:
              {{! ADD event listener to create input form}}
              <a class="addCheck"><i
                  class="fa-solid fa-plus"
                  id="plus"
                  aria-hidden="false"
                ></i></a>
            </h5>
          </div>
          <div class="checklist-form">

            <div class="input-group mb-3" id="addCheck-form" hidden>
              <input
                type="text"
                class="form-control"
                placeholder="New To Do List"
                aria-label="checklist-item"
                aria-describedby="button-addon2"
                id="addInput"
              />
              <button type="button" id="addon-btn">Add List</button>
            </div>

            {{#each checklists as |checklist|}}
              <div
                class="checklist-id-wrapper"
                data-checklist-id="{{checklist.id}}"
              >

                <ul><h3 id="checklist-name">{{checklist.name}}</h3>
                  {{#each checklist.checklist_items as |item|}}
                    <input
                      class="form-check-input"
                      type="checkbox"
                      value=""
                      id="checklist-item-id-{{item.id}}"
                    />
                    <label class="form-check-label" for="flexCheckChecked">{{item.description}}
                    </label>
                  {{/each}}
                </ul>
              </div>

              <button class="add-item-btn" type="button" id="addon-btn-{{checklist.id}}">Add Item</button>
            {{/each}}
          </div>

        </div>
      </div>
    </div>

    <!-- To-Do Column -->
    <div class="col-3">
      <div class="card to-do-card" style="width: 100%">
        <div class="card-header to-do-card-header">
          To Do:
        </div>
        <ul class="list-group list-group-flush">
          {{#each to_do.checklist_items as |item|}}
            <li class="list-group-item to-do-item">{{item.description}}</li>
          {{/each}}
        </ul>
      </div>

      <div class="card to-do-card" style="width: 100%">
        <div class="card-header missed-card-header">
          Missed To Dos:
        </div>
        <ul class="list-group list-group-flush">
          {{#each to_do.checklist_items as |item|}}
            <li class="list-group-item missed-item">{{item.description}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/mainchecklist.js"></script>